init_config:

instances:
  <% @instances.each do |instance| %>
  - host: localhost
    port: 5432
    username: <%= instance['username'] %>
    password: <%= instance['password'] %>
    dbname: <%= instance['db_name'] %>
    tags:
      <% instance['tags'].each do |tag| %>
      - <%= tag %>
      <% end %>
  <% end %>
